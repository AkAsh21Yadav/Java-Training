public class Casting 
{
	public static void main(String[] args) 
	{
		byte b = 21;
		short s = b;
		int i = s;
		long l = i;
		float f = l;
		double d = f;
		System.out.println("Widening of Int : " +d);
		
		
		double d1 = 131.42351;
		float f1 = (float) d1;
		long l1 = (long) f1;
		int i1 = (int) (l1);
		short s1 = (short) (i1);
		byte b1 = (byte) (s1);
		System.out.println("Narrowing of Int : " +b1);
		
		
	}
}
