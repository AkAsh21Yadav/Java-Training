package pattern.practice;

import java.util.Scanner;

public class Number2 
{
	public static void main(String[] args) 
	{
		Scanner s = new Scanner(System.in);
		System.out.print("Enter Number : ");
		int num = s.nextInt();
		
		for (int i = 0; i < num; i++) 
		{
			for (int j = num-i; j > i; j--) 
			{
				System.out.print(" ");
			}
		
			for (int j = 0; j <= i; j++) 
			{
				System.out.print("* ");
			}
			
			System.out.println();	
		}
	}
}
