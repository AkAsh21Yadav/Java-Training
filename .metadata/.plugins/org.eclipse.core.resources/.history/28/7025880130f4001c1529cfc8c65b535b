import java.util.Arrays;

public class ArrayBasic 
{
	public static void main(String[] args) 
	{
		String[] names = new String[5];
		names[0] = "Virat";
		names[1] = "Rohit";
		names[2] = "Mithali";
		names[3] = "Smriti";
		names[4] = "Dhoni";
		
		System.out.println(names);
		
		
		
		
		int[] nums = {12,20,30,40,50};
		System.out.println("Size of Array : " +nums.length);
	
		System.out.println("\n1st element : " +nums[0]);
		System.out.println("2nd element : " +nums[1]);
		System.out.println("3rd element : " +nums[2]);
		System.out.println("4th element : " +nums[3]);
		System.out.println("5th element : " +nums[4]);
	
		System.out.println("\nElements of Array : " +Arrays.toString(nums));
	}
}